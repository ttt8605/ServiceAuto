<head>
    <link rel="stylesheet" href="/stylesheets/login.css"> 
</head>
<% layout('/layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                   <div class="card-body">
<h5 class="card-title mb-4">Intra in cont</h5>                                      
<form action="/login" method="POST" class="validated-form" novalidate>
<div class="mb-3">
    <label class="form-label" for="username">Nume utilizator</label>
    <input class="form-control " type="text" id="username" name="username" autofocus required>
    <div class="valid-feedback">
        Looks good!
       </div>
</div>


<div class="mb-4">
<label class="form-label" for="password">Parola</label>
<input class="form-control " type="password" id="password" name="password" required>
<div class="valid-feedback">
    Looks good!
   </div>
</div>
<button class="btn btn-success btn-block">Intră în cont</button>

</form>
                   </div>
            </div>
        </div>
    </div>
</div>

