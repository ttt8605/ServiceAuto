<% layout('/layouts/boilerplate') %>


<div class="container ">
  <div class="row align-items-center">
    <div class="col-3">
     
    </div>
    <div class="col-6">
      <div class="card container " style="width: 40rem;">
        <div class="card-body">
          <h2 class="card-title mb-4 mt-4"><%=cars.plate%> --- <%=cars.model %></h2>
          <h4 class="card-subtitle mb-2 text-body-secondary">Status: <%=cars.status %></h4>
          <%if( currentUser ){%>
            <h4 class="card-subtitle mb-2 text-body-secondary">Proprietar: <%=cars.owner %></h4>
            <h4 class="card-subtitle mb-4 text-body-secondary">Telefon: <%=cars.phone %></h4>
            <% } %>
            <%if( currentUser ){%>
             
             
        </div>
        <div class="row align-items-center mb-2 ml-2 mr-2 mt-2">
          <h4 class="card-title text-body-secondary">Piese:</h4>
          <% for(let piesa of cars.piese) { %>
            <div class="card mb-3" id="piesa-card-<%= piesa._id %>">
              <div class="card-body">
                <h5 class="card-title"><%= piesa.name %></h5>
                <h6 class="card-title mb-2 mt-2 text-body-secondary">Status: <%= piesa.status %></h6>
                <% if(currentUser) { %>
                  <div class="d-flex mb-2">
                    <button class="btn btn-warning btn-sm me-2 edit-btn" data-piesa-id="<%= piesa._id %>">Modifică</button>
                    <form action="/cars/<%= cars._id %>/piese/<%= piesa._id %>?_method=DELETE" method="POST">
                      <button class="btn btn-sm btn-danger">Șterge</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
        
            <!-- Hidden Edit Form -->
            <div class="card mb-3 hidden" id="edit-form-<%= piesa._id %>">
              <div class="card-body">
                <h5 class="card-title mb-4">Editează</h5>
                <form action="/cars/<%= cars._id %>/piese/<%= piesa._id %>?_method=PUT" method="POST" novalidate class="validated-form">
                  <div class="mb-3">
                    <label for="name-<%= piesa._id %>" class="form-label">Piesă</label>
                    <input type="text" name="name" id="name-<%= piesa._id %>" class="form-control" placeholder="model piesa" value="<%= piesa.name %>" required>
                    <div class="valid-feedback">Looks good!</div>
                  </div>
        
                  <div class="mb-3 mt-3">
                    <label for="status-<%= piesa._id %>" class="form-label">Status</label>
                    <select class="form-select" name="status" aria-label="Default select example">
                      <% for(let stat of statusPiese) { %>
                        <option value="<%= stat %>" <%= piesa.status === stat ? 'selected' : '' %>><%= stat %></option>
                      <% } %>
                    </select>
                  </div>
        
                  <button class="btn btn-success btn-block" type="submit"Editează</button>
                  <button type="button" class="btn mt-2 btn-secondary btn-sm cancel-btn" data-piesa-id="<%= piesa._id %>">Cancel</button>
                </form>
              </div>
            </div>
          <% }} %>
        </div>
        
        <script>
          document.addEventListener('DOMContentLoaded', function() {
            const editButtons = document.querySelectorAll('.edit-btn');
            const cancelButtons = document.querySelectorAll('.cancel-btn');
        
            editButtons.forEach(button => {
              button.addEventListener('click', function() {
                const piesaId = this.getAttribute('data-piesa-id');
                document.getElementById(`piesa-card-${piesaId}`).classList.add('hidden');
                document.getElementById(`edit-form-${piesaId}`).classList.remove('hidden');
              });
            });
        
            cancelButtons.forEach(button => {
              button.addEventListener('click', function() {
                const piesaId = this.getAttribute('data-piesa-id');
                document.getElementById(`edit-form-${piesaId}`).classList.add('hidden');
                document.getElementById(`piesa-card-${piesaId}`).classList.remove('hidden');
              });
            });
          });
        </script>
        
        <style>
          .hidden {
            display: none;
          }
        </style>