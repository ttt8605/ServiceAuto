<head>
  <link rel="stylesheet" href="/stylesheets/new-edit.css">
  <link rel="stylesheet" href="/stylesheets/newAngajat.css">
</head>

  <% layout('/layouts/boilerplate') %>
 
  

    
<div class="left-side"></div>
<section class="MainSection">
  
   <div class="right-side">
        <h2>Adaugă un angajat</h2>
        <form action="/angajati/<%=an._id %>?_method=PUT" method="POST" novalidate  class="validated-form" enctype="multipart/form-data" >
          <div class=" mb-3">
           <label for="name" class="form-label text">Nume & prenume</label>
           <input type="text" name="name" id="name" class="form-control" placeholder="service-name" value="<%= an.name %>" autofocus required>
           <div class="valid-feedback">
            Looks good!
           </div>
          </div>
    
          <div class="mb-3">
            <label class="form-label text" for="role">Rol</label>
            <input class="form-control" name="role" id="role" aria-label="role"  placeholder="Rolul ocupat de angajat" value="<%= an.role %>"required>
            <div class="valid-feedback">
              Looks good!
             </div>
          </div>
        
          <script>
            document.addEventListener('DOMContentLoaded', function () {
         bsCustomFileInput.init();
       });
         </script>
         <div class="mb-3">
           <div class="form-file custom-file">
               <input type="file" class="form-file-input" id="image" name="image" multiple>
               <label class="form-file-label" for="image">
                   <span class="form-file-text custom-file-label">Alege imagini</span>
                   <span class="form-file-button">Caută</span>
               </label>
           </div>
       </div>
       <div class="mb-3">
        <label class="form-label text" for="about">Descriere</label>
        <textarea class="form-control" name="about" id="about" aria-label="about "  rows="6" maxlength="200"  required><%=an.about%></textarea>
        <div class="valid-feedback">
          Looks good!
         </div>
      </div>
    
    
          <div class="mb-3 mt-4">
            <h6 class="text mb-3">Alege imaginile pe care vrei să le ștergi:</h6>
            <% an.images.forEach(function(img,i){ %>
              <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
              <div class="form-check-inline md-3">
                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename %>">
                 <label class="text" for="image-<%=i%>">Șterge</label>
             </div>
            
              <% }) %>
          </div>
    
          
     
            <div class="mb-3">
              <button class="btn btn-success btn-block">Confirmă modificările</button>
              </div>
      
      </form>
   </div>
</section>


  <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
  <script>
      document.addEventListener('DOMContentLoaded', function () {
          bsCustomFileInput.init();
      });
  </script>