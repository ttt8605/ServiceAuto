
<head>
    <link rel="stylesheet" href="/stylesheets/new-edit.css">
  </head>
  <% layout('/layouts/boilerplate') %>
  

 
  <div class="left-side"></div>
  <section class="MainSection">
    
     <div class="right-side">
          <h2>Modifica o postare</h2>
          <form action="/postari/<%=post._id %>?_method=PUT" method="POST" novalidate  class="validated-form" enctype="multipart/form-data" >
            <div class=" mb-3">
             <label for="name" class="form-label text">Titlu</label>
             <input type="text" name="name" id="name" class="form-control" placeholder="service-name" value="<%= post.name %>" autofocus required>
             <div class="valid-feedback">
              Looks good!
             </div>
            </div>
            <script>
              document.addEventListener('DOMContentLoaded', function () {
           bsCustomFileInput.init();
         });
           </script>
           <div class="mb-3">
             <div class="form-file custom-file">
                 <input type="file" class="form-file-input" id="image" name="image" multiple>
                 <label class="form-file-label" for="image">
                     <span class="form-file-text custom-file-label">Alege Imagini</span>
                     <span class="form-file-button">Caută</span>
                 </label>
             </div>
         </div>
      
         <div class="mb-3">
          <label class="form-label text" for="description">Descriere</label>
          <textarea class="form-control" name="description" id="description" aria-label="Description" rows="10" maxlength="1500" required><%=post.description %></textarea>
          <div class="valid-feedback">
            Looks good!
           </div>
        </div>
        
        <h6 class="text mb-3 mt-4">Alege imaginile pe care vrei să le ștergi:</h6>
            <div class="mb-3 mt-4 deleteImgDiv">
              
              <% post.images.forEach(function(img,i){ %>


                <div class="card mt-2 mb-2" style="width: 18rem;">
                  <img src="<%=img.thumbnail%>" class="card-img-top img-thumbnail" alt="">
                  <div class="card-body">
                    
                      <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename %>">
                       <label class="text" for="image-<%=i%>">Șterge</label>
                  
                  </div>
                </div>
               
                
              
                <% }) %>
            </div>
      
            
       
              <div class="mb-3">
                <button class="btn btn-success btn-block">Modifică</button>
                </div>
        
        </form>
        
     </div>
  </section>



  
  
  <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
  <script>
      document.addEventListener('DOMContentLoaded', function () {
          bsCustomFileInput.init();
      });
  </script>