
<% layout('/layouts/boilerplate') %>
  
<div class="card mb-3 mt-4 col-4">
  <img src="<%= post.images[0].url %>" class="card-img-top" alt="Service Image">
  <div class="card-body">
      <h5 class="card-title"><%= post.name %></h5>

      <% if (currentUser && currentUser.role === 'manager') { %>
          <div class="d-flex mb-2">
              <a class="btn btn-warning me-2" href="/postari/<%= post._id %>/edit">Edit</a>
              <form action="/postari/<%= post._id %>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-danger">Delete</button>
              </form>
          </div>
      <% } %>

      <p class="card-text"><%= post.description %></p>
  </div>
</div>