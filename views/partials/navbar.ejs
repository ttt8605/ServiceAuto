<!-- The sliding menu -->
<div id="slidingMenu" class="sliding-menu">
  <div class="leftDiv">
    <a class="navbar-brand" href="/">
    <img src="https://res.cloudinary.com/dn9nc0upp/image/upload/v1725951527/Adimatech_logo_1_utu_1_cmbomq.svg" alt="Bootstrap"  class="logoMeniu">
  </a>
  </div>
  <div class="rigthDiv">
    <div class="upperDiv">
   <button class="close-btn" id="closeMenu">&times;</button>
   <h5 class="meniuTextButtonHide">Meniu</h5>
    </div>

    <div class="lowerDiv">
      <div class="links">
        
            <a class="meniuLink" aria-current="page" href="/">Home</a>
        
  
          <% if (currentUser) { %>
         
              <a class="meniuLink" href="/logout">Log out</a>
           
              <a class="meniuLink" href="/cars/all">Mașini în service</a>
            
              <a class="meniuLink" href="/cars/new">Adaugă o mașină</a>
            
              <a class="meniuLink" href="/programare">Programări</a>
            
           
            <% if(currentUser.role === 'manager'){ %>
           
              <a class="meniuLink" href="/services/new">Adaugă un serviciu</a>
            
              <a class="meniuLink" href="/postari/new">Adaugă o mașină</a>
           
              <a class="meniuLink" href="/angajati/new">Adaugă un angajat</a>
           
              <a class="meniuLink" href="/register">Crează cont</a>
           
        <% }} else { %>
         
            <a class="meniuLink" href="/login">Log in</a>
          
        <% } %>
      </div>
     <div class="informations">
          <div class="Contact">
            <h3 class="textInformations mb-1">Contactează-ne</h3>
            <h5 class="NumberContact">07XX XXX XXX</h5>
          </div>
          <div class="quickLinks">
          <h3 class="textInformations">Program &#8599;</h3>
          <h3 class="textInformations">Locație &#8599;</h3>
        
        </div>
      </div>

     
    </div>
  </div>
  
 

</div>

<script>

  // Get the menu button and sliding menu elements
const menuButton = document.getElementById('menuButton');
const slidingMenu = document.getElementById('slidingMenu');
const closeMenu = document.getElementById('closeMenu');

// Add event listener to open the sliding menu
menuButton.addEventListener('click', () => {
  slidingMenu.classList.add('show-menu');
});

// Add event listener to close the sliding menu
closeMenu.addEventListener('click', () => {
  slidingMenu.classList.remove('show-menu');
});
</script>


